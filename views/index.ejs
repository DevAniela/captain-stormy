<!-- Create a form in for user input -->
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>â˜” Captain Stormy</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=EB+Garamond:ital,wght@0,400..800;1,400..800&display=swap"
      rel="stylesheet"
    />
    <link rel="stylesheet" type="text/css" href="/style.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Pirata+One&display=swap"
      rel="stylesheet"
    />
  </head>
  <body>
    <div class="container">
      <div class="logo-heading">
        <img class="logo" src="/pirate.png" alt="captain stormy pirate icon" />
        <h1>Will it rain tomorrow?</h1>
      </div>
      <p>
        Ahoy, matey! Captain Stormy can help ye decide whether to take an
        umbrella on yer next adventure!
      </p>
      <form action="/weather" method="get">
        <div class="input">
          <input
            type="text"
            id="city"
            name="city"
            placeholder="Enter yer city here"
            required
          />
          <button type="submit">Set Sail!</button>
        </div>
        <% if (typeof error !== "undefined") { %>
        <p><%= error %></p>
        <% } %>
      </form>
    </div>
  </body>
</html>
